{
  "compilerOptions": {
    "outDir": "dist",

    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018", "dom"],

    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "exclude":[
    "node_modules",
    "production_node_modules",
    "dist"
  ]
}